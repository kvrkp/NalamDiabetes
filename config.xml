<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.nalam.diabetes" version="1.0.1">
  <name>NalamDiabetes 1.0</name>
  <description>Nalam Diabetes that responds to the device ready event.</description>
  <author href="http://phonegap.com" email="support@phonegap.com">PhoneGap Team</author>
  <content src="index.html"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="android-minSdkVersion" value="14"/>
  <icon src="www/img/nalam_header.png"/>
  <platform name="android">
    <icon src="www/img/nalam_header.png" density="ldpi"/>
    <icon src="www/img/nalam_header.png" density="mdpi"/>
    <splash src="www/img/nalam_header.png" density="port-xxxhdpi"/>
  </platform>
  <platform name="ios">
    <icon src="www/img/nalam_header.png" platform="ios" width="57" height="57"/>
    <icon src="www/img/nalam_header.png" platform="ios" width="114" height="114"/>
    <splash src="www/img/nalam_header.png" platform="ios" width="2208" height="1242"/>
    <splash src="www/img/nalam_header.png" platform="ios" width="1024" height="768"/>
  </platform>
  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
</widget>